root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_style = space
indent_size = 2

[*.txt]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[*.cfg]
indent_style = space
indent_size = 4

[*.dat]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 2

[*.{c,cpp,h,Makefile,Makefile.am,configure.ac,conf}]
indent_style = space
indent_size = 4

[*.{cmd,bat}]
indent_style = space
indent_size = 4
