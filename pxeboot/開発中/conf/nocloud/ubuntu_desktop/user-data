  network:
    version: 2
    ethernets:
      any-ens:
        match:
          name: "en*"
        dhcp4: true
        dhcp6: true
        ipv6-privacy: true
      any-eth:
        match:
          name: "et*"
        dhcp4: true
        dhcp6: true
        ipv6-privacy: true
