  early-commands:
  - [ sh, -c, '
      exec 2>&1;
      export LANG=C;
      FUNC_NAME="early-commands";
      echo "### start ${FUNC_NAME} ###";
      dd if=/dev/zero of=/dev/nvme0n1 bs=1M count=10;
      echo "### complete ${FUNC_NAME} ###";' ]
